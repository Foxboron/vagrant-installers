{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "../builds/packer-{{user `name`}}-vmware",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{ user `name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    {
      "output": "{{user `box_basename`}}-{{user `version`}}.{{user `build_timestamp`}}.box",
      "keep_input_artifact": false,
      "type": "vagrant",
      "vagrantfile_template": "vagrantfile-linux.template"
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "hashicorp-vagrant/{{user `box_basename`}}",
      "version": "{{user `version`}}.{{user `build_timestamp`}}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/centos/sshd.sh",
        "scripts/centos/update.sh",
        "scripts/centos/vagrant.sh",
        "scripts/centos/vmware.sh",
        "scripts/centos/install-dev-tools.sh",
        "scripts/centos/ruby.sh",
        "scripts/centos/go.sh",
        "scripts/centos/motd.sh",
        "scripts/centos/fpm.sh",
        "scripts/centos/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_basename": "centos6",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "1",
    "disk_size": "65536",
    "headless": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "hyperv_generation": "1",
    "iso_checksum": "d27cf37a40509c17ad70f37bc743f038c1feba00476fe6b69682aa424c399ea6",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-6.9-x86_64-bin-DVD1.iso",
    "ks_path": "ks6.cfg",
    "memory": "1024",
    "mirror": "http://mirrors.kernel.org/centos",
    "mirror_directory": "6.9/isos/x86_64",
    "name": "centos6",
    "no_proxy": "{{env `no_proxy`}}",
    "version": "1.0"
  }
}
